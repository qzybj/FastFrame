<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  button 自定义按钮样式 -->
    <style name="common_btn_weight" parent="style_common">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_dialog_button</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--首页- tab按钮-->
    <style name="style_home_tabbutton" parent="style_common">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/h34dip</item>
        <item name="android:layout_marginBottom">@dimen/h21dip</item>
        <item name="android:drawablePadding">@dimen/h21dip</item>
    </style>

    <!--  tabbottombar - 底部Item布局样式 -->
    <style name="style_tabbar_item_layout" parent="style_common_matchparent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--  titlebar - 标题栏底部线样式 -->
    <style name="style_tiltebar_bottomline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_up_shadow_height</item>
        <item name="android:background">@color/color_b2b2b2</item>
    </style>


    <!-- 注册界面item左显示文字-->
    <style name="style_reg_item_lefttext" parent="style_common">
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:textColor">@color/color_343434</item>
    </style>

    <!-- 注册界面item右边EditText-->
    <style name="style_reg_item_right_edittext" parent="style_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--添加商品- 按钮-->
    <style name="style_button_common" parent="style_text_common">
        <item name="android:layout_width">@dimen/h280dip</item>
        <item name="android:layout_height">@dimen/h68dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/color_33a6ff</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_28</item>
    </style>
</resources>
