<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/h10dip"
    android:paddingTop="@dimen/h10dip">

    <ImageView
        android:id="@+id/iv_icon_show"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/tv_right_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tweetDate"
        android:layout_toLeftOf="@+id/tweetDate"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/style_text_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@+id/iv_icon_show" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/style_text_common"
        android:layout_below="@+id/tv_title"
        android:layout_toRightOf="@+id/iv_icon_show"
        android:textSize="@dimen/text_size_28" />

    <TextView
        android:id="@+id/tweetDate"
        style="@style/style_text_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>