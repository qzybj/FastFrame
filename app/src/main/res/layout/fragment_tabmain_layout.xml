<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMinWidth="@dimen/w180dip"
        app:tabMaxWidth="@dimen/w180dip"
        app:tabIndicatorColor="@color/tab_color_selected"
        app:tabSelectedTextColor="@color/tab_color_selected"
        app:tabTextColor="@color/tab_color_unselected"
        app:tabMode="scrollable"
        app:tabGravity="center"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/container_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>