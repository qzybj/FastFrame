<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/w20dip"
    android:paddingRight="@dimen/w20dip"
    android:paddingTop="@dimen/h36dip"
    android:paddingBottom="@dimen/h36dip"
    android:orientation="horizontal" >
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/dialog_choice_item_normal"
        android:id="@+id/choiceRb"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/color_666666"
        android:textSize="14sp"
        android:id="@+id/itemTxt"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:layout_marginLeft="@dimen/w26dip"
        />
</LinearLayout>
