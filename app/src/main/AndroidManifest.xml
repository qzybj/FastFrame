<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.frame.fastframe">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <!-- extra 一些非必要的权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />


    <application
        android:name="com.frame.fastframelibrary.FastApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/style_activty_custom"
        tools:overrideLibrary="android.support.v7.appcompat"
        tools:replace="android:icon">

        <activity
            android:name="com.frame.fastframe.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/style_activty_custom">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.frame.fastframe.module.home.ui.HomeActivity"
            android:theme="@style/style_activty_custom" />
        <activity
            android:name="com.frame.fastframe.module.communicate.ui.CommunicateActivity"
            android:theme="@style/style_activty_custom" />
        <activity
            android:name="com.frame.fastframe.module.news.ui.NewsActivity"
            android:theme="@style/style_activty_custom" />
        <!--moduls-->
        <activity
            android:name="com.frame.fastframe.module.product.ui.ProductActivity"
            android:theme="@style/style_activty_custom" />

        <activity
            android:name="com.frame.fastframe.ui.simple.ui.SimpleBaseAdapterActivity"
            android:theme="@style/style_activty_custom" />
        <activity
            android:name="com.frame.fastframe.ui.simple.ui.SimpleMultiBaseAdapterActivity"
            android:theme="@style/style_activty_custom" />
        <activity
            android:name="com.frame.fastframe.ui.simple.ui.SimplePopwinActivity"
            android:theme="@style/style_activty_custom" />
        <activity
            android:name="com.frame.fastframe.ui.simple.ui.SimplePassWordViewActivity"
            android:theme="@style/style_activty_custom" />
        <activity
            android:name="com.frame.fastframe.ui.simple.ui.SimpleCameraActivity"
            android:theme="@style/style_activty_custom" />
        <activity
            android:name="com.frame.fastframe.ui.simple.ui.SimpleGalleryActivity"
            android:theme="@style/style_activty_custom" />


        <!--图片裁剪处理-->
        <!--<activity-->
        <!--android:name="com.yalantis.ucrop.UCropActivity"-->
        <!--android:screenOrientation="portrait"-->
        <!--android:configChanges="keyboardHidden"-->
        <!--android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>-->
    </application>

</manifest>
